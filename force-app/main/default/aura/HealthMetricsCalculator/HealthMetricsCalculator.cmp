<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId" 
                controller="HealthMetricsApexController" access="global">
    
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="name" type="String" />
    <aura:attribute name="age" type="Integer" />
    <aura:attribute name="height" type="Decimal" />
    <aura:attribute name="weight" type="Decimal" />
    <aura:attribute name="bmi" type="Decimal" />
    <aura:attribute name="weightStatus" type="String" />
    <aura:attribute name="showResults" type="Boolean" default="false" />
    <aura:attribute name="statusClass" type="String" default="" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <span class="slds-text-heading_small">Health Metrics Calculator</span>
                    </h2>
                </div>
            </header>
        </div>
        
        <div class="slds-card__body slds-card__body_inner">
            <div class="slds-form" role="list">
                
                <div class="slds-form-element slds-m-bottom_medium">
                    <div class="slds-form-element__control">
                        <lightning:input 
                                label="Account Name" 
                                type="text" 
                                value="{!v.name}" 
                                placeholder="Enter account name" />
                    </div>
                </div>
                
                <div class="slds-form-element slds-m-bottom_medium">
                    <div class="slds-form-element__control">
                         <lightning:input 
                                label="Age" 
                                type="number" 
                                value="{!v.age}" 
                                placeholder="Enter age" />
                    </div>
                </div>
                
                <div class="slds-form-element slds-m-bottom_medium">
                    <div class="slds-form-element__control">
                        <lightning:input 
                                label="Height (meters)" 
                                type="number" 
                                step="0.01"
                                value="{!v.height}" 
                                placeholder="e.g., 1.75" />
                    </div>
                </div>
                
                <div class="slds-form-element slds-m-bottom_medium">
                    <div class="slds-form-element__control">
                        <lightning:input 
                                label="Weight (kg)" 
                                type="number" 
                                step="0.1"
                                value="{!v.weight}" 
                                placeholder="e.g., 70.5" />
                    </div>
                </div>
                
                <div class="slds-form-element">
                    <lightning:button variant="brand" 
                                    label="Calculate BMI" 
                                    onclick="{!c.calculateBMI}" 
                                    class="slds-m-top_medium" />
                </div>
            </div>
            
            <aura:if isTrue="{!v.showResults}">
                <div class="slds-box slds-theme_shade slds-m-top_large">
                    <h3 class="slds-text-heading_small slds-m-bottom_medium">Results</h3>
                    
                    <div class="slds-grid slds-wrap slds-gutters_small">
                        <div class="slds-col slds-size_1-of-2">
                            <div class="slds-text-body_small slds-text-color_weak">Name:</div>
                            <div class="slds-text-body_regular slds-text-title_bold">{!v.name}</div>
                        </div>
                        
                        <div class="slds-col slds-size_1-of-2">
                            <div class="slds-text-body_small slds-text-color_weak">Age:</div>
                            <div class="slds-text-body_regular slds-text-title_bold">{!v.age}</div>
                        </div>
                        
                        <div class="slds-col slds-size_1-of-2 slds-m-top_small">
                            <div class="slds-text-body_small slds-text-color_weak">Height:</div>
                            <div class="slds-text-body_regular slds-text-title_bold">{!v.height} m</div>
                        </div>
                        
                        <div class="slds-col slds-size_1-of-2 slds-m-top_small">
                            <div class="slds-text-body_small slds-text-color_weak">Weight:</div>
                            <div class="slds-text-body_regular slds-text-title_bold">{!v.weight} kg</div>
                        </div>
                    </div>
                    
                    <div class="slds-m-top_medium">
                        <div class="{!'slds-box slds-p-around_medium slds-text-align_center ' + v.statusClass}">
                            <div class="slds-text-heading_medium slds-m-bottom_x-small">
                                BMI Score: <strong>{!v.bmi}</strong>
                            </div>
                            <div class="slds-text-heading_small">
                                Status: <strong>{!v.weightStatus}</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </aura:if>
        </div>
    </div>
</aura:component>